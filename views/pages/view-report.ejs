<%- include("./../partials/header.ejs") %>

<div class="p-4">
    <div class="mb-14 grid gap-4">
        <div class="flex h-24 items-center">
            <p class="font-sans text-5xl font-semibold text-gray-700">
                Edit report
            </p>
        </div>
    </div>
    <h2 class="my-4 font-sans text-xl font-medium">
        Project: <span class="font-normal"><%= project_name %></span>
    </h2>
    <h2 class="my-4 font-sans text-xl font-medium">
        Turned in: <span class="font-normal"><%= report_date %></span>
    </h2>
    <h2 class="my-4 font-sans text-xl font-medium">
        Person: <span class="font-normal capitalize"><%= name %></span>
    </h2>
    <div class="mb-6">
        <h3
            for="message"
            class="mb-2 block font-sans font-medium text-gray-900"
        >
            Report:
        </h3>
        <pre
            class="block w-full rounded border border-gray-300 bg-white p-4 font-sans text-gray-800"
        >
<%= text %></pre
        >
    </div>
</div>

<%- include("./../partials/footer.ejs") %>
